{
  "compilerOptions": {
    "target": "ES6",                       // Versión de ECMAScript
    "module": "ESNext",                    // Usa el módulo más reciente de ECMAScript
    "lib": ["DOM", "ESNext"],              // Bibliotecas estándar que incluirá
    "jsx": "react-jsx",                    // Soporte JSX con la nueva transform de React 17+
    "esModuleInterop": true,               // Habilita la interoperabilidad de módulos ES
    "moduleResolution": "node",            // Resolve módulos como Node.js
    "skipLibCheck": true,                  // Omite la revisión de tipos en bibliotecas
    "forceConsistentCasingInFileNames": true,
    "strict": true,                        // Activa el modo estricto de TypeScript
    "noImplicitAny": true,                 // Evita el uso implícito de 'any'
    "strictNullChecks": true,              // Activa las verificaciones estrictas de null
    "baseUrl": "./src",                    // Base path para resolver módulos
    "paths": {                             // Configura alias si es necesario
      "@components/*": ["components/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}